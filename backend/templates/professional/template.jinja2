<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>CV - {{ data.profile.name | default('Nom Prénom') }}</title>
  <link rel="stylesheet" href="style.css">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
</head>
<body>
  <div class="cv-container">
    <!-- Bande turquoise en haut -->
    <div class="top-band"></div>
    
    <div class="main-layout">
      <!-- Colonne gauche -->
      <div class="left-column">
        <!-- Photo de profil -->
        {% if data.profile.photo %}
        <div class="profile-photo">
          <img src="{{ data.profile.photo }}" alt="{{ data.profile.name | default('Photo') }}">
        </div>
        {% endif %}

        <!-- Contact -->
        <section class="sidebar-section">
          <h3 class="sidebar-title">CONTACT</h3>
          <div class="contact-list">
            {% if data.profile.phone %}
            <div class="contact-item">
              <i class="fas fa-phone"></i>
              <span>{{ data.profile.phone }}</span>
            </div>
            {% endif %}
            {% if data.profile.email %}
            <div class="contact-item">
              <i class="fas fa-envelope"></i>
              <span>{{ data.profile.email }}</span>
            </div>
            {% endif %}
            {% if data.profile.location %}
            <div class="contact-item">
              <i class="fas fa-map-marker-alt"></i>
              <span>{{ data.profile.location }}</span>
            </div>
            {% endif %}
            {% if data.profile.linkedin %}
            <div class="contact-item">
              <i class="fab fa-linkedin"></i>
              <span>{{ data.profile.linkedin }}</span>
            </div>
            {% endif %}
          </div>
        </section>

        <!-- Social Media -->
        {% if data.social %}
        <section class="sidebar-section">
          <h3 class="sidebar-title">SOCIAL MEDIA</h3>
          <div class="social-list">
            {% for platform in data.social %}
            <div class="social-item">
              <i class="fab fa-{{ platform.name | lower }}"></i>
              <span>{{ platform.handle }}</span>
            </div>
            {% endfor %}
          </div>
        </section>
        {% endif %}

        <!-- Languages -->
        {% if data.languages %}
        <section class="sidebar-section">
          <h3 class="sidebar-title">LANGUAGES</h3>
          <div class="languages-list">
            {% for lang in data.languages %}
            <div class="language-item">
              <div class="lang-name">{{ lang.name | upper }}</div>
              <div class="lang-level">{{ lang.level }}</div>
            </div>
            {% endfor %}
          </div>
        </section>
        {% endif %}

        <!-- Pro Skills -->
        {% if data.skills and data.skills.groups %}
        <section class="sidebar-section">
          <h3 class="sidebar-title">PRO SKILLS</h3>
          <div class="skills-bars">
            {% for group in data.skills.groups %}
              {% for skill in group.items %}
              <div class="skill-bar">
                <div class="skill-name">{{ skill }}</div>
                <div class="bar">
                  <div class="bar-fill"></div>
                </div>
              </div>
              {% endfor %}
            {% endfor %}
          </div>
        </section>
        {% endif %}
      </div>

      <!-- Colonne droite -->
      <div class="right-column">
        <!-- En-tête avec nom -->
        <header class="header">
          <h1 class="name">{{ data.profile.name | default('NAME SURNAME') | upper }}</h1>
          {% if data.profile.title %}
          <p class="profession">{{ data.profile.title }}</p>
          {% endif %}
        </header>

        <!-- About Me -->
        {% if data.summary %}
        <section class="content-section">
          <h3 class="section-title">ABOUT ME</h3>
          <p class="about-text">{{ data.summary }}</p>
        </section>
        {% endif %}

        <!-- Experience -->
        {% if data.experience %}
        <section class="content-section">
          <h3 class="section-title">EXPERIENCE</h3>
          {% for exp in data.experience %}
          <div class="experience-item">
            <div class="exp-header">
              <h4 class="exp-title">{{ exp.position | default(exp.role) | upper }}</h4>
              <div class="exp-company">{{ exp.company }}</div>
              {% if exp.dates or (exp.start and exp.end) %}
              <div class="exp-dates">{{ exp.dates | default(exp.start ~ ' | ' ~ exp.end) }}</div>
              {% endif %}
            </div>
            {% if exp.tasks or exp.bullets %}
            <ul class="exp-tasks">
              {% for task in exp.tasks | default(exp.bullets) %}
              <li>{{ task }}</li>
              {% endfor %}
            </ul>
            {% endif %}
          </div>
          {% endfor %}
        </section>
        {% endif %}

        <!-- Education -->
        {% if data.education %}
        <section class="content-section">
          <h3 class="section-title">EDUCATION</h3>
          {% for edu in data.education %}
          <div class="education-item">
            <h4 class="edu-title">{{ edu.degree | upper }}</h4>
            <div class="edu-school">{{ edu.institution | default(edu.school) }}</div>
            {% if edu.dates or edu.year %}
            <div class="edu-dates">{{ edu.dates | default(edu.year) }}</div>
            {% endif %}
          </div>
          {% endfor %}
        </section>
        {% endif %}
      </div>
    </div>

    <!-- Bande turquoise en bas -->
    <div class="bottom-band"></div>
  </div>
</body>
</html>